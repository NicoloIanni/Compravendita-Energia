    {
      "name": "Protected - Dummy Ping",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" },
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/protected/ping",
          "host": ["{{baseUrl}}"],
          "path": ["protected", "ping"]
        },
        "description": "Endpoint dummy protetto: richiede JWT valido. Deve rispondere 200 se autorizzato."
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('JWT is present in environment', function () {",
              "  const jwtToken = pm.environment.get('jwt_token');",
              "  pm.expect(jwtToken, 'Missing env var jwt_token: login probably failed').to.be.a('string').and.not.empty;",
              "  if (!pm.environment.get('jwt_token') && pm.environment.get('jwt')) {",
              "    pm.environment.set('jwt_token', pm.environment.get('jwt'));",
              "  }",
              "});"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },

