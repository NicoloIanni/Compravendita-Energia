  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "const now = new Date();",
          "now.setHours(now.getHours() + 48);",
          "const bookingDate = now.toISOString().slice(0, 10);",
          "pm.environment.set('bookingDate', bookingDate);",
          "console.log('bookingDate set to:', bookingDate);"
        ]
      }
    }
  ],
