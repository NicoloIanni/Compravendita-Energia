{
  "info": {
    "name": "Compravendita Energia - Full Demo",
    "_postman_id": "f50e5520-7acd-4493-8101-630d49931369",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection completa: health, auth, consumer, producer, resolve."
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Health OK', () => pm.response.to.have.status(200));"
            ]
          }
        }
      ]
    },
    {
      "name": "Auth - Login Producer",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{producer_email}}\",\n  \"password\": \"{{producer_password}}\"\n}"
        },
        "url": "{{baseUrl}}/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.test('Producer login OK', () => pm.response.to.have.status(200));",
              "pm.environment.set('producer_token', json.accessToken);"
            ]
          }
        }
      ]
    },
    {
      "name": "Auth - Login Consumer",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{consumer_email}}\",\n  \"password\": \"{{consumer_password}}\"\n}"
        },
        "url": "{{baseUrl}}/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.test('Consumer login ok', () => pm.response.to.have.status(200));",
              "pm.environment.set('consumer_token', json.accessToken);"
            ]
          }
        }
      ]
    },
    {
  "name": "Producer - Upsert Slots (capacity + price)",
  "request": {
    "method": "PATCH",
    "header": [
      {
        "key": "Authorization",
        "value": "Bearer {{producer_token}}"
      },
      {
        "key": "Content-Type",
        "value": "application/json"
      }
    ],
    "body": {
      "mode": "raw",
      "raw": "{\n  \"date\": \"{{tomorrow}}\",\n  \"slots\": [\n    {\n      \"hour\": 10,\n      \"capacityKwh\": 10,\n      \"pricePerKwh\": 2\n    },\n    {\n      \"hour\": 11,\n      \"capacityKwh\": 8,\n      \"pricePerKwh\": 1.5\n    }\n  ]\n}"
    },
    "url": "{{baseUrl}}/producers/me/slots"
  },
  "event": [
    {
      "listen": "test",
      "script": {
        "exec": [
          "pm.test('Slots upsert OK', () => pm.response.to.have.status(200));"
        ]
      }
    }
  ]
},
